PACKAGE = dbi
BUILD = library unit-tests
MAJOR_VERSION = 1
MINOR_VERSION = 1
VERSION_SUFFIX =
VERSION = $(MAJOR_VERSION)_$(MINOR_VERSION)$(VERSION_SUFFIX)
MAINTAINER = Dan.Pressel@gd-ais.com, Jeffrey.Randolph@gd-ais.com, Thomas.Zellman@gd-ais.com
DESCRIPTION = This module contains a database abstraction layer \
              for talking in SQL to a database.  It is known to \
              work on PostgreSQL and MySQL.  It was developed   \
              under IMPRES, and is currently supported by the   \
              IMPRES team.  Pre-requisites include a working    \
              install of either pgsql or mysql and notifying    \
              the configure script of which to enable and use.

SOURCES = PgSQLConnection.cpp OracleConnection.cpp MySQLConnection.cpp DatabaseClientFactory.cpp
TESTS = SQLTest1.cpp SQLTest2.cpp

MY_CXXFLAGS = 
MY_CXXDEFINES =
MY_LFLAGS =
MY_INCLUDES = -I@top_srcdir@/except/include \
              -I@top_srcdir@/str/include \
              -I@top_srcdir@/sys/include \
              -I@top_srcdir@/io/include \
              -I@top_srcdir@/util/include
MY_LIBPATH = -L@top_srcdir@/except/lib/@target@/@lib_dir@ \
             -L@top_srcdir@/str/lib/@target@/@lib_dir@ \
             -L@top_srcdir@/sys/lib/@target@/@lib_dir@ \
             -L@top_srcdir@/io/lib/@target@/@lib_dir@
MY_LIBS = -lio-c++ -lsys-c++ -lstr-c++ -lexcept-c++
