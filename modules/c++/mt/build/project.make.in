PACKAGE = mt
BUILD = library unit-tests
MAJOR_VERSION = 1
MINOR_VERSION = 0
VERSION_SUFFIX = RC4
VERSION = $(MAJOR_VERSION)_$(MINOR_VERSION)$(VERSION_SUFFIX)
MAINTAINER = Dan.Pressel@gd-ais.com, Jeffrey.Randolph@gd-ais.com, Thomas.Zellman@gd-ais.com
DESCRIPTION = Synchronization layer with support for powerful \
              multi-threading techniques, including producer-consumer \
              queues, and thread pools

SOURCES = GenericRequestHandler.cpp \
          GenerationThreadPool.cpp \
          LinuxCPUAffinityInitializer.cpp \
          LinuxCPUAffinityThreadInitializer.cpp
TESTS = BasicThreadPoolTest.cpp MTSingletonTest.cpp SingletonTest.cpp GenerationThreadPoolTest.cpp TwoSingletonsTest.cpp

MY_CXXFLAGS = 
MY_CXXDEFINES =
MY_LFLAGS =
MY_INCLUDES = -I@top_srcdir@/except/include \
              -I@top_srcdir@/str/include \
              -I@top_srcdir@/sys/include \
              -I@top_srcdir@/io/include
MY_LIBPATH = -L@top_srcdir@/except/lib/@target@/@lib_dir@ \
             -L@top_srcdir@/str/lib/@target@/@lib_dir@ \
             -L@top_srcdir@/sys/lib/@target@/@lib_dir@ \
             -L@top_srcdir@/io/lib/@target@/@lib_dir@
MY_LIBS = -lsys-c++ -lstr-c++ -lexcept-c++
