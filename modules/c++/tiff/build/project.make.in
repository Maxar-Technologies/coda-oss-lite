          Header.cpp \
          KnownTags.cpp \
          IFDEntry.cpp \
          IFD.cpp \
          TypeFactory.cpp \
          ImageReader.cpp \
          FileReader.cpp \
          ImageWriter.cpp \
          FileWriter.cpp

