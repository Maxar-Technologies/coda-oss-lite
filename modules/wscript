import os
from build import CPPOptionsContext
from waflib import Scripting, Options
from os.path import join, exists 

VERSION = '2.0-dev'
APPNAME = 'CODA'
top  = '.'
out  = 'target'

DIRS = 'drivers c++'

def options(opt):
    opt.load('build matlabtool', tooldir='./build/')
    # always set_options on all
    opt.recurse(DIRS)

def configure(conf):
    conf.load('build matlabtool', tooldir='./build/')
    conf.recurse(DIRS)

def build(bld):
    bld.recurse(DIRS)

def distclean(ctxt):
    ctxt.recurse(DIRS)
    Scripting.distclean(ctxt)
